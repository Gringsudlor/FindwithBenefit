<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckInActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/check_in_toolbar"
        >

    </include>

    <ImageView
        android:id="@+id/check_in_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/checkin"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="5dp" />

    <TextView
        android:id="@+id/table_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_in_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:hint="Table Name"
        android:padding="6dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/table_list_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_name"
        android:layout_margin="16dp"
        >
    </Spinner>

    <Button
        android:id="@+id/check_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_list_dropdown"
        android:text="Check In"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        />

</RelativeLayout>